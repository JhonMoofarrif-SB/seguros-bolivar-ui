{
  "name": "@seguros-bolivar/ui-bundle",
  "version": "1.0.0",
  "description": "Seguros Bolivar UI Design System - Multi-brand CSS & Web Components Bundle for CDN",
  "type": "module",
  "private": false,
  "main": "./dist/sb-ui-seguros-bolivar-light.min.css",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/**/*.css",
    "dist/**/*.js",
    "dist/**/*.map",
    "dist/**/*.gz",
    "dist/**/*.br",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsx src/builder.ts",
    "build:copy": "pnpm run build && pnpm run copy:all",
    "copy:all": "pnpm run copy:examples && pnpm run copy:storybook",
    "copy:examples": "mkdir -p ../../examples/dist && cp dist/sb-ui-*.min.css dist/sb-ui-*.min.js dist/sb-ui-*.min.js.map ../../examples/dist/ 2>/dev/null || true && echo '✅ Archivos copiados a examples/dist/'",
    "copy:storybook": "mkdir -p ../docs/.storybook && cp dist/sb-ui-*.min.css ../docs/.storybook/ 2>/dev/null || true && echo '✅ Archivos CSS copiados a Storybook'",
    "dev": "tsx watch src/builder.ts",
    "clean": "rm -rf dist",
    "serve": "npx serve dist -p 3000",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "publish:dry": "npm publish --dry-run",
    "publish:public": "npm publish --access public"
  },
  "keywords": [
    "design-system",
    "seguros-bolivar",
    "multi-brand",
    "css",
    "web-components",
    "ui-components",
    "cdn",
    "bundle",
    "lit",
    "atomic-design",
    "design-tokens",
    "responsive",
    "accessibility",
    "dark-mode",
    "colombia"
  ],
  "homepage": "https://github.com/seguros-bolivar/bolivar-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seguros-bolivar/bolivar-ui.git",
    "directory": "packages/bundle"
  },
  "bugs": {
    "url": "https://github.com/seguros-bolivar/bolivar-ui/issues"
  },
  "author": {
    "name": "Seguros Bolivar UI Team",
    "email": "ui-team@segurosbolivar.com",
    "url": "https://www.segurosbolivar.com"
  },
  "license": "MIT",
  "dependencies": {
    "@seguros-bolivar-ui/atoms": "workspace:*",
    "@seguros-bolivar-ui/molecules": "workspace:*",
    "@seguros-bolivar-ui/tokens": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "clean-css": "^5.3.3",
    "compression": "^1.8.1",
    "cssnano": "^7.1.1",
    "esbuild": "^0.20.1",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
